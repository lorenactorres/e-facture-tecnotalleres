<odoo>
    <data>
    <!-- Action Window -->
    <record model="ir.actions.act_window" id="action_hr_novelties_different_concepts">
        <field name="name">Por conceptos diferentes</field>
        <field name="res_model">hr.novelties.different.concepts</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva novedad por concepto diferente
            </p>
        </field>
    </record>
    <record id="view_company_social_security_form" model="ir.ui.view">
		<field name="name">res.company.lavish.hr.social.security.form.inherit</field>
		<field name="model">res.company</field>
		<field name="priority">50</field>
		<field name="inherit_id" ref="base.view_company_form"/>
		<field name="arch" type="xml">
			<xpath expr="//group[@name='social_media']" position="before">
				<group string="Nómina - Novedades" name="nove">
					<field name="novelty_approval_required"/>
				</group>
			</xpath>
		</field>
    </record>
	<record id="rule_hr_novelties_different_concepts" model="ir.rule">
		<field name="name">Permisos compañia Por conceptos diferentes</field>
		<field name="model_id" ref="model_hr_novelties_different_concepts"/>
		<field name="domain_force">['|',('employee_id.company_id','=',False),('employee_id.company_id', 'in', company_ids)]</field>
	</record>
    <!-- Tree View -->
    <record model="ir.ui.view" id="lavish_hr_payroll.list_hr_novelties_different_concepts">
        <field name="name">hr novelties different concepts list</field>
        <field name="model">hr.novelties.different.concepts</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-info="state == 'draft'" 
                  decoration-muted="state == 'cancelled'"
                  decoration-success="state == 'approved'"
                  decoration-warning="state == 'pending'"
                  decoration-danger="state == 'rejected'">
                <field name="name" readonly="1"/>
                <field name="employee_id" required="1"/>
                <field name="employee_identification" readonly="1"/>
                <field name="salary_rule_id" readonly="state != 'draft'"/>
                <field name="dev_or_ded"/>
                <field name="date" readonly="state != 'draft'"/>
                <field name="amount" readonly="state != 'draft'" sum="Total"/>
                <field name="description"/>
				<field name="salary_structure_ids" widget="many2many_tags"
                                   readonly="state != 'draft'"/>
                <field name="partner_id" readonly="state != 'draft'"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'pending'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state in ['rejected', 'cancelled']"/>
                <button name="action_view_form" type="object" 
                        string="Ver detalle" icon="fa-eye" class="btn btn-link"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="lavish_hr_payroll.form_hr_novelties_different_concepts">
        <field name="name">hr novelties different concepts form</field>
        <field name="model">hr.novelties.different.concepts</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit_approval" string="Enviar a Aprobación" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Aprobar" type="object"
                            class="oe_highlight"
                            invisible="state != 'pending'"/>
                    <button name="action_reject" string="Rechazar" type="object"
                            invisible="state != 'pending'"/>
                    <button name="action_cancel" string="Cancelar" type="object"
                            invisible="state in ['cancelled', 'processed']"/>
                    <button name="action_draft" string="Volver a Borrador" type="object"
                            invisible="state not in ['rejected', 'cancelled']"/>
                    <button name="action_transfer_novelty" string="Trasladar" type="object"
                            invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,pending,approved,processed"/>
                </header>
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button name="action_view_payslip" type="object" class="oe_stat_button" 
                                icon="fa-money" invisible="not payslip_id">
                            <field name="payslip_id" string="Nómina" widget="statinfo"/>
                        </button>
                    </div> -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="employee_identification"/>
                            <field name="salary_rule_id" readonly="state != 'draft'"/>
                            <field name="dev_or_ded"/>
                            <field name="salary_structure_ids" widget="many2many_tags"
                                   readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="amount" readonly="state != 'draft'"/>
                            <field name="description"/>
                            <field name="partner_id" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company"
                                   readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Información de Traslados" invisible="not transfer_date">
                            <group>
                                <field name="transfer_date"/>
                                <field name="original_novelty_id"/>
                                <field name="transferred_novelty_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Información de Aprobación" invisible="not approval_user_id">
                            <group>
                                <field name="approval_user_id"/>
                                <field name="approval_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="hr_novelties_different_concepts_pivot" model="ir.ui.view">
        <field name="name">hr.novelties.different.concepts.pivot</field>
        <field name="model">hr.novelties.different.concepts</field>
        <field name="arch" type="xml">
            <pivot string="Análisis de Novedades" sample="1">
                <field name="employee_id" type="row"/>
                <field name="salary_rule_id" type="row"/>
                <field name="amount" type="measure"/>
                <field name="date" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="hr_novelties_different_concepts_graph" model="ir.ui.view">
        <field name="name">hr.novelties.different.concepts.graph</field>
        <field name="model">hr.novelties.different.concepts</field>
        <field name="arch" type="xml">
            <graph string="Análisis de Novedades" sample="1">
                <field name="employee_id"/>
                <field name="salary_rule_id"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Search View -->
    <record id="hr_novelties_different_concepts_view_search" model="ir.ui.view">
        <field name="name">hr.novelties.different.concepts.view.search</field>
        <field name="model">hr.novelties.different.concepts</field>
        <field name="arch" type="xml">
            <search string="Conceptos diferentes">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="salary_rule_id"/>
                <field name="description"/>
                <field name="partner_id"/>
                <filter string="Mis novedades" name="my_novelties" 
                        domain="[('create_uid', '=', uid)]"/>
                <filter string="Borrador" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Pendiente Aprobación" name="pending" 
                        domain="[('state', '=', 'pending')]"/>
                <filter string="Aprobado" name="approved" 
                        domain="[('state', '=', 'approved')]"/>
                <filter string="Rechazado" name="rejected" 
                        domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="Fecha" name="date_filter" date="date"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Empleado" name="employee" 
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Regla Salarial" name="salary_rule" 
                            context="{'group_by': 'salary_rule_id'}"/>
                    <filter string="Estado" name="state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Fecha" name="date" 
                            context="{'group_by': 'date'}"/>
                    <filter string="Compañía" name="company" 
                            context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>
    <record id="view_hr_novelty_massive_wizard_form" model="ir.ui.view">
        <field name="name">hr.novelty.massive.wizard.form</field>
        <field name="model">hr.novelty.massive.wizard</field>
        <field name="arch" type="xml">
            <form string="Creación Masiva de Novedades">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Descripción general para las novedades"/>
                            <field name="date"/>
                            <field name="salary_rule_id"/>
                            <field name="amount"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="selection_type" widget="radio"/>
                            <field name="salary_structure_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Selección de Empleados" name="employee_selection">
                            <group>
                                <field name="department_ids" widget="many2many_tags" 
                                       invisible="selection_type != 'department'"/>
                                <field name="job_ids" widget="many2many_tags" 
                                       invisible="selection_type != 'job'"/>
                                <field name="employee_ids" 
                                       invisible="selection_type != 'specific'"
                                       domain="[('contract_id.state', '=', 'open')]">
                                    <tree>
                                        <field name="name"/>
                                        <field name="identification_id"/>
                                        <field name="job_id"/>
                                        <field name="department_id"/>
                                        <field name="company_id" groups="base.group_multi_company"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        
                    </notebook>
                    <footer>
                        <button name="action_create_massive_novelties" 
                                string="Crear Novedades" 
                                type="object" 
                                class="btn-primary"
                                data-hotkey="q"/>
                        <button special="cancel" 
                                string="Cancelar" 
                                class="btn-secondary"
                                data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Massive Creation Wizard -->
    <record id="action_hr_novelty_massive_wizard" model="ir.actions.act_window">
        <field name="name">Creación Masiva de Novedades</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.novelty.massive.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Wizard para Rechazo de Novedad -->
    <record id="view_hr_novelty_reject_wizard_form" model="ir.ui.view">
        <field name="name">hr.novelty.reject.wizard.form</field>
        <field name="model">hr.novelty.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Rechazar Novedad">
                <sheet>
                    <group>
                        <field name="novelty_id" invisible="1"/>
                        <field name="reject_reason" required="1" placeholder="Ingrese el motivo del rechazo..."/>
                    </group>
                    <footer>
                        <button name="action_reject" 
                                string="Confirmar Rechazo" 
                                type="object" 
                                class="btn-primary"
                                data-hotkey="q"/>
                        <button special="cancel" 
                                string="Cancelar" 
                                class="btn-secondary"
                                data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard para Traslado de Novedad -->
    <record id="view_hr_novelty_transfer_wizard_form" model="ir.ui.view">
        <field name="name">hr.novelty.transfer.wizard.form</field>
        <field name="model">hr.novelty.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Trasladar Novedad">
                <sheet>
                    <group>
                        <field name="novelty_id" invisible="1"/>
                        <field name="transfer_date" required="1"/>
                        <field name="transfer_reason" required="1"/>
                    </group>
                    <group>
                        <field name="keep_original" widget="boolean_toggle"/>
                        <field name="adjust_amount"/>
                        <field name="new_amount" invisible="not adjust_amount"/>
                    </group>
                    <footer>
                        <button name="action_transfer" 
                                string="Confirmar Traslado" 
                                type="object" 
                                class="btn-primary"
                                data-hotkey="q"/>
                        <button special="cancel" 
                                string="Cancelar" 
                                class="btn-secondary"
                                data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    </data>
</odoo>